<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    tools:context="com.arrowland.arrowland.Membership">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorDarkGreen"
            android:textSize="20dp"
            android:textAlignment="center"
            android:text="ANNUAL MEMBERSHIP FEE"
            />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/fontWhite"
            android:text="Price : P2500"
            android:textSize="15dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:textSize="18dp"
            android:textColor="@color/colorDarkGreen"
            android:text="Inclusion :"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_arrow_forward_black_24dp"
                android:drawableTint="@color/fontWhite"
                android:padding="10dp"
                android:drawablePadding="10dp"
                android:textSize="14dp"
                android:textColor="@color/fontWhite"
                android:text="10% DISCOUNT ON MERCHANDISE (CASH)  "/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_arrow_forward_black_24dp"
                android:drawablePadding="10dp"
                android:drawableTint="@color/fontWhite"
                android:padding="10dp"
                android:text="* 10% DISCOUNT ON ARMORY SERVICES"
                android:textColor="@color/fontWhite"
                android:textSize="14dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_arrow_forward_black_24dp"
                android:drawableTint="@color/fontWhite"
                android:padding="10dp"
                android:drawablePadding="10dp"
                android:textSize="14dp"
                android:textColor="@color/fontWhite"
                android:text="20% DISCOUNT ON TOURNAMENT FEES "/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_arrow_forward_black_24dp"
                android:drawableTint="@color/fontWhite"
                android:padding="10dp"
                android:drawablePadding="10dp"
                android:textSize="14dp"
                android:textColor="@color/fontWhite"
                android:text="DISCOUNTED TARGET FACE PRICE: PHP 30"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_arrow_forward_black_24dp"
                android:drawableTint="@color/fontWhite"
                android:padding="10dp"
                android:drawablePadding="10dp"
                android:textSize="14dp"
                android:textColor="@color/fontWhite"
                android:text="DISCOUNTED RANGE RENTAL : GAC(P200) ARROWLAND(P250)"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_arrow_forward_black_24dp"
                android:drawableTint="@color/fontWhite"
                android:padding="10dp"
                android:drawablePadding="10dp"
                android:textSize="14dp"
                android:textColor="@color/fontWhite"
                android:text="DISCOUNT ARE ALSO APPLICABLE TO ARROWLAND BRANCHES"/>

                <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_arrow_forward_black_24dp"
                android:drawableTint="@color/fontWhite"
                android:padding="10dp"
                android:drawablePadding="10dp"
                android:textSize="14dp"
                android:textColor="@color/fontWhite"
                android:text="PARTNER DISCOUNTS"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_arrow_forward_black_24dp"
                android:drawableTint="@color/fontWhite"
                android:padding="10dp"
                android:drawablePadding="10dp"
                android:textSize="14dp"
                android:textColor="@color/fontWhite"
                android:text="FREE STORAGE OF EQUIPMENT"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_arrow_forward_black_24dp"
                android:drawableTint="@color/fontWhite"
                android:padding="10dp"
                android:drawablePadding="10dp"
                android:textSize="14dp"
                android:textColor="@color/fontWhite"
                android:text="SEASONAL PERKS AND EXCLUSIVE PROMOS"/>


        </LinearLayout>

    </LinearLayout>







    </ScrollView>



    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <!-- Main content -->

        <android.support.design.widget.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/colorPrimary"
            app:itemIconTint="@color/fontWhite"
            app:itemTextColor="@color/fontWhite"
            app:menu="@menu/bottom_menu" />

    </FrameLayout>






</RelativeLayout>
