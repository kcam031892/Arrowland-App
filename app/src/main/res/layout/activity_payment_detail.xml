<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    tools:context="com.arrowland.arrowland.ReservationDetail">


    <include
        layout="@layout/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:padding="20dp"
        android:orientation="vertical">







        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Payment Detail"
            android:textAlignment="center"
            android:textColor="@color/fontWhite"
            android:textSize="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"


            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Payment Method"
            android:textColor="@color/fontWhite"
            android:textSize="15dp"
            android:padding="6dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvPaymentMethod"
            android:text=""
            android:drawableLeft="@drawable/ic_arrow_forward_black_24dp"
            android:drawablePadding="20dp"
            android:drawableTint="@color/colorAccent"
            android:textColor="@color/fontWhite"
            android:textSize="15dp"
            android:padding="6dp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/fontWhite"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

        </View>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sender Name / Contact Number"
            android:textColor="@color/fontWhite"
            android:textSize="15dp"
            android:padding="6dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvSender"
            android:text=""
            android:drawableLeft="@drawable/ic_arrow_forward_black_24dp"
            android:drawablePadding="20dp"
            android:drawableTint="@color/colorAccent"
            android:textColor="@color/fontWhite"
            android:textSize="15dp"
            android:padding="6dp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/fontWhite"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

        </View>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Control Number / Reference Number"
            android:textColor="@color/fontWhite"
            android:textSize="15dp"
            android:padding="6dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvReferenceNumber"
            android:text=""
            android:drawableLeft="@drawable/ic_arrow_forward_black_24dp"
            android:drawablePadding="20dp"
            android:drawableTint="@color/colorAccent"
            android:textColor="@color/fontWhite"
            android:textSize="15dp"
            android:padding="6dp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/fontWhite"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

        </View>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Amount"
            android:textColor="@color/fontWhite"
            android:textSize="15dp"
            android:padding="6dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvAmount"
            android:text=""
            android:drawableLeft="@drawable/ic_arrow_forward_black_24dp"
            android:drawablePadding="20dp"
            android:drawableTint="@color/colorAccent"
            android:textColor="@color/fontWhite"
            android:textSize="15dp"
            android:padding="6dp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/fontWhite"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

        </View>



    </LinearLayout>

    <include layout="@layout/loading_spinner">

    </include>

</RelativeLayout>
