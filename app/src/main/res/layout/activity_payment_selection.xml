<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:orientation="vertical"
    tools:context="com.arrowland.arrowland.PaymentSelection">

    <include
        layout="@layout/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_marginBottom="30dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/fontWhite"
                android:textSize="20dp"
                android:paddingLeft="15dp"
                android:text="\tSELECT YOUR PREFERRED PAYMENT BY CLICKING THE IMAGE."
                />
            <View
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_weight="1"
                android:layout_marginTop="15dp"
                android:background="@color/colorDarkGreen">

            </View>

            <ImageView
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/smart_padala"
                android:scaleType="centerCrop"
                android:layout_margin="20dp"
                android:id="@+id/img_smart_padala"
                />

            <ImageView
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/cebuanna"
                android:scaleType="centerCrop"
                android:layout_margin="20dp"
                android:id="@+id/img_cebuana"
                />

            <ImageView
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/cc"
                android:scaleType="centerCrop"
                android:layout_margin="20dp"
                android:id="@+id/img_cc"
                />

            <ImageView
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/paypal"
                android:scaleType="centerCrop"
                android:layout_margin="20dp"
                android:id="@+id/img_paypal"
                />

        </LinearLayout>

    </ScrollView>


</LinearLayout>
