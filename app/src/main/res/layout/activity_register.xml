<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarThumbVertical="@color/fontWhite"
    android:background="@drawable/bg_gradient"
    tools:context="com.arrowland.arrowland.Register">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:paddingTop="70dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/txtRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="Create an account"
                android:textAlignment="center"
                android:textColor="@color/fontWhite"
                android:textSize="25dp"

                />


            <EditText
                android:id="@+id/etRegUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/txtRegister"
                android:layout_marginLeft="20dp"
                android:contentDescription="@string/app_name"
                android:layout_marginRight="20dp"
                android:backgroundTint="@color/fontWhite"
                android:drawableLeft="@drawable/ic_username"
                android:drawablePadding="10dp"
                android:drawableTint="@color/fontWhite"
                android:ems="10"
                android:hint="Username"
                android:inputType="textPersonName"
                android:paddingBottom="20dp"
                android:paddingTop="50dp"
                android:textColor="@color/fontWhite"
                android:textColorHint="@color/fontWhite"
                android:maxLength="15"/>

            <EditText
                android:id="@+id/etRegEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/etRegUsername"

                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:backgroundTint="@color/fontWhite"
                android:drawableLeft="@drawable/ic_email"
                android:drawablePadding="10dp"
                android:drawableTint="@color/fontWhite"
                android:ems="10"
                android:hint="Email Address"
                android:inputType="textEmailAddress"
                android:paddingBottom="20dp"
                android:paddingTop="40dp"
                android:textColor="@color/fontWhite"
                android:textColorHint="@color/fontWhite"
                android:maxLength="50"/>


            <EditText
                android:id="@+id/etRegPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/etRegEmail"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:backgroundTint="@color/fontWhite"
                android:drawableLeft="@drawable/ic_password"
                android:drawablePadding="10dp"
                android:drawableTint="@color/fontWhite"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingBottom="20dp"
                android:paddingTop="40dp"
                android:textColor="@color/fontWhite"
                android:textColorHint="@color/fontWhite"
                android:maxLength="20"/>


            <EditText
                android:id="@+id/etRegConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/etRegPassword"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:backgroundTint="@color/fontWhite"
                android:drawableLeft="@drawable/ic_password"
                android:drawablePadding="10dp"
                android:drawableTint="@color/fontWhite"
                android:ems="10"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:paddingBottom="20dp"
                android:paddingTop="40dp"
                android:textColor="@color/fontWhite"
                android:textColorHint="@color/fontWhite"
                android:maxLength="20"/>

            <TextView
                android:id="@+id/txtPasswordMatch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etRegConfirmPassword"
                android:layout_marginLeft="80dp"
                android:fontFamily="sans-serif-condensed"
                android:padding="20dp"
                android:text="Password not match"
                android:textAlignment="center"
                android:textColor="#f7765f"
                android:textSize="15dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/txtPersonalInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtPasswordMatch"
                android:fontFamily="sans-serif-condensed"
                android:paddingBottom="50dp"
                android:paddingTop="20dp"
                android:text="Personal Information"
                android:textAlignment="center"
                android:textColor="@color/fontWhite"
                android:textSize="20dp"/>


            <EditText
                android:id="@+id/etRegFName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/txtPersonalInfo"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:backgroundTint="@color/fontWhite"
                android:drawableLeft="@drawable/ic_name"
                android:drawablePadding="10dp"
                android:drawableTint="@color/fontWhite"
                android:ems="10"
                android:hint="First Name"
                android:inputType="textCapWords"
                android:paddingBottom="20dp"
                android:textColor="@color/fontWhite"
                android:textColorHint="@color/fontWhite"
                android:maxLength="30"/>


            <EditText
                android:id="@+id/etRegMName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/etRegFName"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:backgroundTint="@color/fontWhite"
                android:drawableLeft="@drawable/ic_name"
                android:drawablePadding="10dp"
                android:drawableTint="@color/fontWhite"
                android:ems="10"
                android:hint="Middle Name"
                android:inputType="textCapSentences"
                android:paddingBottom="20dp"
                android:paddingTop="50dp"
                android:textColor="@color/fontWhite"
                android:textColorHint="@color/fontWhite"
                android:maxLength="30"/>


            <EditText
                android:id="@+id/etRegLName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/etRegMName"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:backgroundTint="@color/fontWhite"
                android:drawableLeft="@drawable/ic_name"
                android:drawablePadding="10dp"
                android:drawableTint="@color/fontWhite"
                android:ems="10"
                android:hint="Last Name"
                android:inputType="textCapSentences"
                android:paddingBottom="20dp"
                android:paddingTop="50dp"
                android:textColor="@color/fontWhite"
                android:textColorHint="@color/fontWhite"
                android:maxLength="30"/>


            <EditText
                android:id="@+id/etRegAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/etRegLName"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:backgroundTint="@color/fontWhite"
                android:drawableLeft="@drawable/ic_home_black_24dp"
                android:drawablePadding="10dp"
                android:drawableTint="@color/fontWhite"
                android:ems="10"
                android:hint="Address"
                android:inputType="textCapWords"
                android:paddingBottom="20dp"
                android:paddingTop="50dp"
                android:textColor="@color/fontWhite"
                android:textColorHint="@color/fontWhite"
                android:maxLength="50"/>

            <Spinner
                android:id="@+id/spRegGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@id/etRegAddress"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="50dp"
                android:backgroundTint="@color/fontWhite">


            </Spinner>

            <EditText
                android:id="@+id/etRegContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/spRegGender"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:backgroundTint="@color/fontWhite"
                android:drawableLeft="@drawable/ic_contact"
                android:drawablePadding="10dp"
                android:drawableTint="@color/fontWhite"
                android:ems="10"
                android:hint="Contact Number"
                android:inputType="number"
                android:paddingBottom="20dp"
                android:paddingTop="50dp"
                android:textColor="@color/fontWhite"
                android:textColorHint="@color/fontWhite"
                android:maxLength="11"/>

            <EditText
                android:id="@+id/etRegBirthday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/etRegContact"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:backgroundTint="@color/fontWhite"
                android:drawableLeft="@drawable/ic_birthday"
                android:drawablePadding="10dp"
                android:drawableTint="@color/fontWhite"
                android:ems="10"
                android:hint="Birthday"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:paddingBottom="20dp"
                android:paddingTop="50dp"
                android:textColor="@color/fontWhite"
                android:textColorHint="@color/fontWhite" />

            <Button
                android:id="@+id/btnRegisterSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/etRegBirthday"
                android:layout_marginTop="20dp"
                android:background="@drawable/my_button"
                android:onClick="register_submit"
                android:text="Register"


                android:textColor="@color/fontWhite" />


        </LinearLayout>


    </ScrollView>


    <include layout="@layout/loading_spinner">

    </include>

</RelativeLayout>
