<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    tools:context="com.arrowland.arrowland.ReservationDetail">


    <include
        layout="@layout/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:padding="20dp"
        android:orientation="vertical">







        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reservation Information"
            android:textAlignment="center"
            android:textColor="@color/fontWhite"
            android:textSize="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"


            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/fontWhite"
            android:textSize="15dp"
            android:padding="6dp"
            android:id="@+id/tvResDate"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/fontWhite"
            android:textSize="15dp"
            android:padding="6dp"
            android:id="@+id/tvResTime"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/fontWhite"
            android:textSize="15dp"
            android:padding="12dp"
            android:id="@+id/tvResId"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/fontWhite"
            android:textSize="15dp"
            android:padding="12dp"
            android:id="@+id/tvPackage"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/fontWhite"
            android:textSize="15dp"
            android:padding="12dp"
            android:id="@+id/tvCoaches"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/fontWhite"
            android:textSize="15dp"
            android:padding="12dp"
            android:id="@+id/tvTotal"/>

        <Button
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Button"
            android:textColor="@color/fontWhite"
            android:background="@drawable/my_button"
            android:padding="10dp"
            android:id="@+id/mBtn1"
            android:layout_gravity="center"
            android:visibility="invisible"
            />

        <Button
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Button"
            android:textColor="@color/fontWhite"
            android:background="@drawable/btn_danger"
            android:padding="10dp"
            android:id="@+id/btnCancel"
            android:layout_gravity="center"
            android:visibility="invisible"
            />


    </LinearLayout>

    <include
        layout="@layout/loading_spinner"
        >

    </include>

</RelativeLayout>
