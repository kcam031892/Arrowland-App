<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_gradient"
    android:padding="8dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="invisible"
        android:id="@+id/memLayout">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Arrowland offers a membership"
            android:textColor="@color/fontWhite"
            android:textSize="30dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:textColor="@color/colorDarkGreen"
            android:textSize="20dp"
            android:text="Benefits of a being member"

            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_arrow_forward_black_24dp"
                android:drawableTint="@color/fontWhite"
                android:padding="10dp"
                android:drawablePadding="10dp"
                android:textSize="14dp"
                android:textColor="@color/fontWhite"
                android:text="Discounts on merchandise"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_arrow_forward_black_24dp"
                android:drawableTint="@color/fontWhite"
                android:padding="10dp"
                android:drawablePadding="10dp"
                android:textSize="14dp"
                android:textColor="@color/fontWhite"
                android:text="Discounts on Armory Service"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_arrow_forward_black_24dp"
                android:drawableTint="@color/fontWhite"
                android:padding="10dp"
                android:drawablePadding="10dp"
                android:textSize="14dp"
                android:textColor="@color/fontWhite"
                android:text="Discounts on Tournament fees"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_arrow_forward_black_24dp"
                android:drawableTint="@color/fontWhite"
                android:padding="10dp"
                android:drawablePadding="10dp"
                android:textSize="14dp"
                android:textColor="@color/fontWhite"
                android:text="And many more!"/>


        </LinearLayout>


        <Button
            android:id="@+id/btnMembership"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp"
            android:background="@drawable/my_button"
            android:onClick="btnMembership"
            android:text="Apply Now!"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/fontWhite"
            android:layout_marginTop="70dp"
            android:visibility="gone"

        />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/memLayoutAccepted"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        >
        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:maxHeight="10dp"
                android:maxWidth="10dp"
                app:srcCompat="@drawable/logo"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>



        <android.support.v7.widget.CardView
            android:id="@+id/card_view1"
            android:layout_marginTop="170dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="@color/colorDarkGreen"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    android:padding="12dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tvApplicationStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="APPLICATION STATUS"
                        android:textSize="20dp"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimaryDark"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp"
                        android:background="@color/fontWhite">

                    </View>

                    <TextView
                        android:layout_marginTop="10dp"
                        android:id="@+id/tvMembershipId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="17dp"
                        android:textColor="@color/fontWhite"/>

                    <TextView
                        android:layout_marginTop="10dp"
                        android:id="@+id/tvDateStarted"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="17dp"
                        android:textColor="@color/fontWhite"/>

                    <TextView
                        android:id="@+id/tvDateEnded"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="17dp"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/fontWhite"/>

                    <TextView
                        android:id="@+id/tvRemainingDay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="17dp"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/fontWhite"/>







                </LinearLayout>
            </LinearLayout>




        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/card_view1"

            >

            <Button
                android:id="@+id/btnApplyMembershipAgain"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:background="@drawable/my_button"
                android:onClick="btnMembership"
                android:text="Apply Again!"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/fontWhite"
                android:visibility="invisible"

                />
        </LinearLayout>




    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_gradient"
        android:id="@+id/memLayoutPending"
        android:visibility="invisible"
        >
        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:maxHeight="10dp"
                android:maxWidth="10dp"
                app:srcCompat="@drawable/logo"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>



        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_marginTop="170dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            app:cardCornerRadius="15dp"
            app:cardBackgroundColor="@color/colorDarkGreen"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    android:padding="18dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Your application is still pending. Wait for the confirmation. You will get notified when your application get accepted."
                        android:textSize="18dp"
                        android:textColor="@color/fontWhite"/>


                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/card_view"
            android:layout_marginTop="100dp"

            >


            <Button
                android:layout_width="200dp"
                android:padding="10dp"
                android:layout_height="wrap_content"
                android:background="@drawable/my_button"
                android:text="Cancel Application"
                android:textColor="@color/fontWhite"
                android:layout_marginTop="20dp"
                android:visibility="invisible"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>

    </RelativeLayout>

    <include layout="@layout/loading_spinner">

    </include>

</RelativeLayout>